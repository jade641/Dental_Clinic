<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.dashboard-page {
    background: #f6f8fb;
 min-height: 100vh;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
}

/* Navigation Bar */
.navbar {
  background: #ffffff;
  border-bottom: 1px solid #e5e7eb;
    padding: 0;
    position: sticky;
    top: 0;
    z-index: 100;
box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03);
}

.navbar-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
 align-items: stretch;
    height: 60px;
}

/* Left Side - Tab Navigation */
.nav-tabs {
    display: flex;
    align-items: stretch;
    gap: 0;
    list-style: none;
    margin: 0;
  padding: 0 20px;
}

.nav-tab-item {
    display: flex;
    align-items: center;
    gap: 28px;
}

.nav-tab-link {
    display: flex;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
}

.nav-link {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: #64748b;
    font-size: 14px;
    font-weight: 500;
 padding: 0 20px;
    height: 100%;
  border-bottom: 2px solid transparent;
    transition: all 0.2s ease;
}

.nav-link:hover {
  color: #dc2626;
    background: #fef2f2;
}

.nav-link.active {
    color: #dc2626;
    background: #fee2e2;
    font-weight: 600;
}

.navbar-actions {
    display: flex;
    align-items: center;
    gap: 12px;
}

.search-box {
    position: relative;
    display: flex;
    align-items: center;
}

.nav-tab-link:hover {
    color: #0f172a;
}

.user-profile {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 6px 12px 6px 6px;
    border-radius: 50px;
    cursor: pointer;
  transition: all 0.2s ease;
    border: 1px solid transparent;
    background: #f8fafc;
}

.nav-tab-link.active {
    color: #0066FF;
border-bottom-color: #0066FF;
    background: #f0f9ff;
}

.nav-tab-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 18px;
    height: 18px;
}

.user-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
}

.user-name {
 font-size: 13px;
    font-weight: 600;
    color: #0f172a;
    line-height: 1.2;
}

.user-role {
  font-size: 11px;
    color: #64748b;
    line-height: 1.2;
}

/* Dashboard Content */
.dashboard-content {
 max-width: 1400px;
    margin: 0 auto;
 padding: 24px 40px 40px;
}

/* Hero Section */
.hero-section {
    background: linear-gradient(135deg, #dc2626 0%, #ef4444 50%, #f87171 100%);
    border-radius: 16px;
    padding: 20px 28px;
    color: #ffffff;
    box-shadow: 0 8px 32px rgba(220, 38, 38, 0.25);
    margin-bottom: 28px;
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: -30%;
    right: -5%;
    width: 350px;
    height: 350px;
background: radial-gradient(circle, rgba(255, 255, 255, 0.12) 0%, transparent 65%);
    border-radius: 50%;
}

.hero-wrapper {
    position: relative;
    z-index: 1;
    display: grid;
  grid-template-columns: auto 1fr auto;
    align-items: center;
gap: 24px;
}

.hero-text {
    flex-shrink: 0;
}

.hero-title {
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 2px 0;
 line-height: 1.3;
}

.hero-subtitle {
    font-size: 13px;
    opacity: 0.95;
    margin: 0;
 font-weight: 400;
}

.quick-stats {
    display: flex;
    gap: 12px;
    justify-content: flex-end;
}

.quick-stat {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 12px 18px;
    min-width: 130px;
    text-align: center;
    transition: all 0.3s ease;
}

.quick-stat:hover {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.22);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
}

.stat-label {
 font-size: 11px;
  opacity: 0.95;
  font-weight: 500;
 margin-bottom: 4px;
    text-transform: capitalize;
}

.stat-value {
 font-size: 28px;
    font-weight: 800;
    line-height: 1;
}

.hero-icon {
    opacity: 0.9;
 flex-shrink: 0;
}

/* Stats Cards Grid */
.stats-cards-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 28px;
}

.stat-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(15, 23, 42, 0.06);
    border: 1px solid #f1f5f9;
    display: flex;
    align-items: flex-start;
    gap: 16px;
    transition: all 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(15, 23, 42, 0.12);
}

.stat-card-icon {
    width: 56px;
    height: 56px;
  border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.stat-card-icon.green {
    background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
    color: #16a34a;
}

.stat-card-icon.blue {
    background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
    color: #2563eb;
}

.stat-card-icon.purple {
    background: linear-gradient(135deg, #ede9fe 0%, #ddd6fe 100%);
  color: #7c3aed;
}

.stat-card-icon.yellow {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    color: #f59e0b;
}

.stat-card-content {
  flex: 1;
    min-width: 0;
}

.stat-card-label {
    font-size: 13px;
    color: #64748b;
    font-weight: 500;
    margin-bottom: 6px;
}

.stat-card-value {
    font-size: 28px;
    font-weight: 800;
    color: #0f172a;
    line-height: 1.2;
    margin-bottom: 6px;
}

.stat-card-change {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-size: 12px;
    font-weight: 600;
    padding: 4px 8px;
    border-radius: 6px;
}

.stat-card-change.positive {
    background: #dcfce7;
    color: #16a34a;
}

.stat-card-info {
    font-size: 12px;
 color: #64748b;
    font-weight: 500;
}

/* Content Grid */
.content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
  gap: 24px;
}

/* Analytics Grid */
.analytics-grid {
    display: grid;
 grid-template-columns: 1fr 1fr;
 gap: 24px;
}

.analytics-panel {
    background: #ffffff;
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 2px 8px rgba(15, 23, 42, 0.06);
    border: 1px solid #f1f5f9;
}

.analytics-header {
    display: flex;
    justify-content: space-between;
align-items: center;
    margin-bottom: 20px;
    padding-bottom: 14px;
    border-bottom: 1px solid #f1f5f9;
}

.analytics-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 16px;
    font-weight: 700;
    color: #0f172a;
}

.analytics-period {
    font-size: 12px;
    color: #64748b;
    background: #f8fafc;
    padding: 6px 12px;
    border-radius: 8px;
    font-weight: 500;
}

.chart-container {
    min-height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    overflow: hidden;
}

.chart-container.empty {
    background: #f8fafc;
    border: 2px dashed #e5e7eb;
}

.chart-container.pie-chart {
    padding: 20px;
}

/* Responsive */
@@media (max-width: 1200px) {
    .stats-cards-grid {
 grid-template-columns: repeat(2, 1fr);
    }

    .analytics-grid {
   grid-template-columns: 1fr;
    }

    .content-grid {
  grid-template-columns: 1fr;
    }

    .hero-wrapper {
 grid-template-columns: 1fr;
     gap: 16px;
    }

 .quick-stats {
   justify-content: flex-start;
        flex-wrap: wrap;
    }
}

@@media (max-width: 768px) {
    .dashboard-content {
        padding: 20px 16px 32px;
    }

 .navbar {
        padding: 12px 16px;
    }

    .navbar-container {
     flex-wrap: wrap;
 gap: 12px;
}

    .navbar-menu {
    gap: 16px;
  width: 100%;
  justify-content: space-between;
    }

    .nav-links {
        width: 100%;
   justify-content: space-around;
    }

  .hero-section {
        padding: 16px 20px;
    }

    .hero-wrapper {
        grid-template-columns: 1fr;
        gap: 14px;
    }

    .stats-cards-grid {
        grid-template-columns: 1fr;
        gap: 12px;
    }

    .stat-card {
  padding: 16px;
    }

    .analytics-grid {
        gap: 16px;
    }

    .quick-stats {
 grid-template-columns: 1fr 1fr;
        gap: 10px;
     flex-wrap: wrap;
    }

    .quick-stat {
        min-width: auto;
    }

    .hero-icon {
   display: none;
    }

    .search-box input {
      width: 180px;
    }
}

@@media (max-width: 480px) {
    .stats-cards-grid {
        grid-template-columns: 1fr;
    }

  .stat-card-value {
        font-size: 24px;
    }

    .quick-stats {
  flex-direction: column;
  }

 .navbar-brand-text h1 {
    font-size: 11px;
    }

    .navbar-brand-text p {
      font-size: 9px;
  }

    .hero-title {
        font-size: 18px;
 }

    .user-info {
    display: none;
 }
}
