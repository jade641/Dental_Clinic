@code {
    private string patientName = "Patient";
    private int patientId;

    private decimal totalSpent = 0;
    private decimal outstanding = 0;
    private decimal nextPayment = 0;
    private string nextPaymentDate = "N/A";

    private bool showPaymentModal = false;
    private int step = 1;
    private decimal paymentAmount = 0;
    private bool isProcessing = false;
    private string paymentMessage = "";
    private bool isSuccess = false;

    private List<PaymentTransaction> recentPayments = new List<PaymentTransaction>();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var session = await SessionService.GetCurrentSessionAsync();
            if (session == null || session.Role != "Patient")
            {
                Navigation.NavigateTo("/login", true);
                return;
            }

            patientName = session.UserName ?? "Patient";
            if (session.RoleSpecificId.HasValue)
            {
                patientId = session.RoleSpecificId.Value;
                await LoadBillingData();
            }
        }
        catch (Exception ex)
        {
            Debug.WriteLine($"[Billing] Error loading: {ex.Message}");
        }
    }

    private async Task LoadBillingData()
    {
        outstanding = await DatabaseService.GetPatientBalanceAsync(patientId);
        recentPayments = await DatabaseService.GetPaymentsByPatientIdAsync(patientId);

        if (recentPayments.Any())
        {
            totalSpent = recentPayments.Sum(p => p.Amount);
        }
    }

    private void OpenPaymentModal()
    {
        paymentAmount = outstanding;
        step = 1;
        showPaymentModal = true;
        paymentMessage = "";
        isSuccess = false;
    }

    private void ClosePaymentModal()
    {
        showPaymentModal = false;
    }

    private void GoToStep2()
    {
        if (paymentAmount <= 0)
        {
            paymentMessage = "Please enter a valid amount.";
            return;
        }
        paymentMessage = "";
        step = 2;
    }

    private void GoToStep1()
    {
        step = 1;
    }

    private async Task ProcessPayment()
    {
        isProcessing = true;
        paymentMessage = "Generating secure payment link...";
        StateHasChanged();

        // 1. Create PayMongo Link
        var (linkId, checkoutUrl) = await PayMongoService.CreatePaymentLinkAsync(paymentAmount, "Dental Service Payment");

        if (!string.IsNullOrEmpty(checkoutUrl))
        {
            // Open the link in the browser
            try
            {
                await Microsoft.Maui.ApplicationModel.Launcher.OpenAsync(new Uri(checkoutUrl));
            }
            catch { /* Ignore if fails to open automatically */ }

            paymentMessage = "Payment link opened! Waiting for confirmation...";
            step = 3; // Move to "Waiting" step
            StateHasChanged();

            // 2. Poll for Status (Simulating Webhook)
            bool isPaid = false;
            int attempts = 0;
            while (!isPaid && attempts < 60) // Timeout after ~2 minutes
            {
                await Task.Delay(2000); // Check every 2 seconds
                var status = await PayMongoService.GetLinkStatusAsync(linkId);

                if (status == "paid")
                {
                    isPaid = true;
                }
                attempts++;
            }

            if (isPaid)
            {
                // 3. Record Payment in DB
                var transaction = new PaymentTransaction
                {
                    PatientID = patientId,
                    Amount = paymentAmount,
                    PaymentDate = DateTime.Now,
                    PaymentMethod = "PayMongo Online", // We don't know exact method from link status easily without more calls
                    ReferenceNumber = linkId,
                    Remarks = "Online Payment Verified"
                };

                bool recordSuccess = await DatabaseService.RecordPaymentAsync(transaction);

                if (recordSuccess)
                {
                    // 4. Deduct Balance
                    var result = await DatabaseService.DeductPatientBalanceAsync(patientId, paymentAmount);

                    if (result.Success)
                    {
                        outstanding -= paymentAmount;
                        if (outstanding < 0) outstanding = 0;

                        isSuccess = true;
                        step = 4; // Success Step
                        await LoadBillingData();
                    }
                }
            }
            else
            {
                paymentMessage = "Payment session timed out. Please try again.";
                step = 1;
            }
        }
        else
        {
            paymentMessage = "Failed to connect to PayMongo. Please check your internet.";
        }

        isProcessing = false;
        StateHasChanged();
    }

    private void DownloadReceipt(int paymentId)
    {
        Debug.WriteLine($"Download receipt for payment {paymentId}");
    }
}