@page "/patient-billing"
@using System.Diagnostics
@using Dental_Clinic.Services
@using Dental_Clinic.Models
@inject SessionService SessionService
@inject DatabaseService DatabaseService
@inject PayMongoService PayMongoService
@inject NavigationManager Navigation

<link href="css/patientdashboard.css" rel="stylesheet" />
<link href="css/PatientBilling.css" rel="stylesheet" />

<div class="dashboard-page">
    <!-- Shared Patient Navbar with notifications and settings -->
    <PatientNavBar />

    <!-- Main Content Wrapper to match dashboard spacing -->
    <div class="dashboard-content">
        <div class="billing-page">
            <!-- Header Section -->
            <div class="billing-header">
                <h1 class="billing-title">Billing & Invoices</h1>
            </div>

            <!-- Summary Cards Section -->
            <div class="billing-summary">
                <!-- Total Spent Card -->
                <div class="summary-card card-blue">
                    <div class="card-icon blue-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <polyline points="23 6 13.5 15.5 8.5 10.5 1 18" stroke="currentColor" stroke-width="2" />
                            <polyline points="17 6 23 6 23 12" stroke="currentColor" stroke-width="2" />
                        </svg>
                    </div>
                    <div class="card-content">
                        <div class="card-label">Total Paid</div>
                        <div class="card-amount black">₱@totalSpent.ToString("N0")</div>
                    </div>
                </div>

                <!-- Outstanding Card -->
                <div class="summary-card card-orange">
                    <div class="card-icon orange-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                            <path d="M12 8V12" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                            <circle cx="12" cy="16" r="1" fill="currentColor" />
                        </svg>
                    </div>
                    <div class="card-content">
                        <div class="card-label">Unpaid Invoices</div>
                        <div class="card-amount orange">₱@outstanding.ToString("N0")</div>
                    </div>
                </div>
            </div>

            <!-- Unpaid Invoices Section -->
            <div class="recent-payments-section">
                <h2 class="section-title">Unpaid Invoices</h2>
                <div class="payments-list">
                    @if (unpaidAppointments.Any())
                    {
                        @foreach (var app in unpaidAppointments)
                        {
                            <div class="payment-item invoice-item" style="border-left: 4px solid #f97316;">
                                <div class="payment-left">
                                    <div class="payment-info">
                                        <div class="payment-title">@app.ServiceName</div>
                                        <div class="payment-date">@app.AppointmentDate.ToString("MMM dd, yyyy") - Dr. @app.DentistName</div>
                                        <div class="payment-method-badge" style="background: #fff7ed; color: #c2410c;">Unpaid</div>
                                    </div>
                                </div>
                                <div class="payment-right">
                                    <div class="payment-amount">₱@app.ServiceCost.ToString("N0")</div>
                                    <button class="btn-pay-now" @onclick="() => InitiatePayment(app)">Pay Now</button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <polyline points="22 4 12 14.01 9 11.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                            <p>No unpaid invoices. You are all caught up!</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Payments Section -->
            <div class="recent-payments-section" style="margin-top: 30px;">
                <h2 class="section-title">Payment History</h2>

                <div class="payments-list">
                    @if (recentPayments.Any())
                    {
                        @foreach (var payment in recentPayments)
                        {
                            <div class="payment-item">
                                <div class="payment-left">
                                    <div class="payment-check-icon">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none"
                                            xmlns="http://www.w3.org/2000/svg">
                                            <polyline points="20 6 9 17 4 12" stroke="currentColor" stroke-width="2.5" />
                                        </svg>
                                    </div>
                                    <div class="payment-info">
                                        <div class="payment-title">@payment.Remarks</div>
                                        <div class="payment-date">@payment.PaymentDate.ToString("dd/MM/yyyy")</div>
                                        <div class="payment-method-badge">@payment.PaymentMethod</div>
                                    </div>
                                </div>
                                <div class="payment-right">
                                    <div class="payment-amount">₱@payment.Amount.ToString("N0")</div>
                                    <button class="btn-download" @onclick="() => DownloadReceipt(payment.PaymentID)"
                                        title="Download Receipt">
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
                                            xmlns="http://www.w3.org/2000/svg">
                                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" stroke="currentColor"
                                                stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            <polyline points="7 10 12 15 17 10" stroke="currentColor" stroke-width="2"
                                                stroke-linecap="round" stroke-linejoin="round" />
                                            <line x1="12" y1="15" x2="12" y2="3" stroke="currentColor" stroke-width="2"
                                                stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="2" y="5" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2" />
                                <path d="M2 9H22" stroke="currentColor" stroke-width="2" />
                            </svg>
                            <p>No payment history yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (showPaymentModal && selectedAppointment != null)
{
    <div class="modal-backdrop" @onclick="ClosePaymentModal">
        <div class="modal-content" @onclick:stopPropagation>
            <div class="modal-header">
                <h3>Secure Checkout</h3>
                <button class="close-btn" @onclick="ClosePaymentModal">×</button>
            </div>
            <div class="modal-body">
                @if (step == 1)
                {
                    <div class="checkout-step">
                        <h4>Confirm Payment</h4>
                        <div class="invoice-details" style="background: #f8fafc; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                            <p><strong>Service:</strong> @selectedAppointment.ServiceName</p>
                            <p><strong>Date:</strong> @selectedAppointment.AppointmentDate.ToString("MMM dd, yyyy")</p>
                            <p><strong>Dentist:</strong> Dr. @selectedAppointment.DentistName</p>
                            <hr style="margin: 10px 0; border-color: #e2e8f0;" />
                            <p style="font-size: 1.2em; color: #0f172a;"><strong>Total Amount:</strong> ₱@selectedAppointment.ServiceCost.ToString("N2")</p>
                        </div>
                        
                        <p class="text-muted">You will be redirected to a secure page to complete your payment using GCash, GrabPay, or Credit Card.</p>

                        <div class="modal-footer-buttons">
                            <button class="btn-secondary" @onclick="ClosePaymentModal">Cancel</button>
                            <button class="btn-confirm" @onclick="ProcessPayment" disabled="@isProcessing">
                                @(isProcessing ? "Processing..." : "Proceed to Payment")
                            </button>
                        </div>
                    </div>
                }
                else if (step == 2)
                {
                    <div class="checkout-step" style="text-align: center;">
                        <div class="spinner"></div>
                        <h4>Waiting for Payment...</h4>
                        <p>Please complete the payment in the browser window that opened.</p>
                        <p class="text-small">Do not close this window.</p>
                    </div>
                }
                else if (step == 3)
                {
                    <div class="checkout-step success-step">
                        <div class="success-icon">✅</div>
                        <h4>Payment Successful!</h4>
                        <p>Your payment of <strong>₱@selectedAppointment.ServiceCost.ToString("N2")</strong> has been verified.</p>
                        <button class="btn-confirm" @onclick="ClosePaymentModal">Done</button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(paymentMessage) && step != 3)
                {
                    <div class="alert @(isSuccess ? "alert-success" : "alert-info")">
                        @paymentMessage
                    </div>
                }
            </div>
        </div>
    </div>
}

