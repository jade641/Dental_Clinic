    <div class="dashboard-inner">
        <!-- Page Header -->
        <div class="page-header-section">
            <div class="page-header-content">
                <h1 class="page-title">My Appointments</h1>
                <p class="page-subtitle">View and manage your upcoming dental appointments</p>
            </div>
            <div class="page-header-actions">
                <button class="btn-book-appointment" @onclick="BookNewAppointment">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    Book New Appointment
                </button>
            </div>
        </div>

        <!-- Appointments Section -->
        <div class="appointments-content">
            <div class="appointments-section-card">
                <h2 class="section-heading">Upcoming Appointments</h2>

                @if (appointments != null && appointments.Any())
                {
                    <div class="appointments-list-minimal">
                        @foreach (var appointment in appointments)
                        {
                            <div class="appointment-item-minimal">
                                <div class="appointment-favorite">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="heart-icon">
                                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                    </svg>
                                </div>

                                <div class="appointment-main-info">
                                    <h3 class="appointment-title-minimal">@appointment.Title</h3>
                                    <p class="appointment-doctor-minimal">with Dr. @appointment.DoctorName</p>
                                    
                                    <div class="appointment-metadata">
                                        <span class="meta-date">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                                <line x1="3" y1="10" x2="21" y2="10"></line>
                                            </svg>
                                            @appointment.Date.ToString("dd/MM/yyyy")
                                        </span>
                                        <span class="meta-time">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <circle cx="12" cy="12" r="10"></circle>
                                                <polyline points="12 6 12 12 16 14"></polyline>
                                            </svg>
                                            @appointment.Date.ToString("hh:mm tt")
                                        </span>
                                        <span class="meta-price">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <line x1="12" y1="1" x2="12" y2="23"></line>
                                                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                                            </svg>
                                            ?@((int)appointment.Price).ToString("N0")
                                        </span>
                                    </div>
                                </div>

                                <div class="appointment-actions-minimal">
                                    <span class="status-badge-minimal status-@appointment.Status.ToLower()">@appointment.Status</span>
                                    <button class="btn-reschedule-minimal" @onclick="() => RescheduleAppointment(appointment.Id)">
                                        Reschedule
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state-minimal">
                        <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <h4>No appointments scheduled</h4>
                        <p>Book your first appointment to get started</p>
                        <button class="btn-book-first" @onclick="BookNewAppointment">Book Appointment</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

