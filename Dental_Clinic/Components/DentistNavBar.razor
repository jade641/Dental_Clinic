@code {
    private string dentistDisplayName = "Dentist";
    private bool showSettings = false;
    private string? userAvatar;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var session = await SessionService.GetCurrentSessionAsync();
            if (session == null)
            {
                Navigation.NavigateTo("/login", true);
                return;
            }
            dentistDisplayName = session.UserName ?? "Dentist";
            
            // Fetch user details to get avatar
            var user = await DatabaseService.GetUserByIdAsync(session.UserId);
            if (user != null)
            {
                userAvatar = user.Avatar;
            }
        }
        catch
        {
            dentistDisplayName = "Dentist";
        }
    }

    private void ToggleSettings() => showSettings = !showSettings;
    private void EditProfile() { showSettings = false; Navigation.NavigateTo("/dentist/profile"); }
    private void OpenScheduleAvailability() { showSettings = false; Navigation.NavigateTo("/schedule"); }
    private bool patientNotifications = true;
    private void TogglePatientNotifications(ChangeEventArgs e) { patientNotifications = e.Value is bool b ? b : patientNotifications; }
    private void OpenPatientNotification() { showSettings = false; Navigation.NavigateTo("/dentist/patients"); }
    private void Logout() { showSettings = false; Navigation.NavigateTo("/login", true); }
}