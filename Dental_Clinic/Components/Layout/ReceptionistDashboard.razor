@page "/receptionist-dashboard"
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager Navigation

<link rel="stylesheet" href="~/css/receptionistdashboard.css">

<div class="receptionist-dashboard">
    <!-- Top Navigation Bar -->
    <header class="top-navbar">
        <div class="navbar-left">
            <div class="clinic-brand">
                <img src="css/bootstrap/Dental_Logo.png" alt="Aurelia Dental Clinic" class="clinic-logo-img" />
                <div class="clinic-info">
                    <h1>AURELIA DENTAL CLINIC - RECEPTIONIST</h1>
                    <p>Front Desk Management</p>
                </div>
            </div>
        </div>

        <div class="navbar-center">
            <div class="page-title-section">
                <h2 class="page-title">Receptionist Dashboard</h2>
                <p class="page-subtitle">Manage appointments and patient check-ins</p>
            </div>
        </div>

        <div class="navbar-right">
            <div class="nav-tabs">
                <NavLink href="/receptionist-dashboard" class="nav-tab" ActiveClass="active" Match="NavLinkMatch.All">
                    <span class="nav-icon">??</span>
                    <span>Overview</span>
                </NavLink>

                <NavLink href="/receptionist-calendar" class="nav-tab" ActiveClass="active">
                    <span class="nav-icon">??</span>
                    <span>Calendar</span>
                </NavLink>

                <NavLink href="/receptionist-patients" class="nav-tab" ActiveClass="active">
                    <span class="nav-icon">??</span>
                    <span>Patients</span>
                </NavLink>

                <NavLink href="/receptionist-messages" class="nav-tab" ActiveClass="active">
                    <span class="nav-icon">??</span>
                    <span>Messages</span>
                </NavLink>

            </div>

            <div class="navbar-actions">
                <button class="icon-button" aria-label="Notifications">
                    ??
                    <span class="notification-dot"></span>
                </button>

                <button class="settings-btn" title="Settings" aria-label="Open settings">
                    <span class="settings-icon">??</span>
                </button>

                <div class="user-profile">
                    <div class="user-avatar">RS</div>
                    <div class="user-info">
                        <div class="user-name">Receptionist</div>
                        <div class="user-role">Front Desk</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="dashboard-main">
        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card blue-border">
                <div class="stat-content">
                    <div class="stat-info">
                        <p class="stat-label">Today's Appointments</p>
                        <h3 class="stat-value">12</h3>
                    </div>
                    <div class="stat-icon blue">??</div>
                </div>
            </div>

            <div class="stat-card yellow-border">
                <div class="stat-content">
                    <div class="stat-info">
                        <p class="stat-label">Checked In</p>
                        <h3 class="stat-value">5</h3>
                    </div>
                    <div class="stat-icon yellow">?</div>
                </div>
            </div>

            <div class="stat-card green-border">
                <div class="stat-content">
                    <div class="stat-info">
                        <p class="stat-label">In Queue</p>
                        <h3 class="stat-value">3</h3>
                    </div>
                    <div class="stat-icon green">??</div>
                </div>
            </div>

            <div class="stat-card cyan-border">
                <div class="stat-content">
                    <div class="stat-info">
                        <p class="stat-label">Pending</p>
                        <h3 class="stat-value">4</h3>
                    </div>
                    <div class="stat-icon cyan">?</div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <section class="quick-actions-section">
            <h3 class="section-title">Quick Actions</h3>
            <div class="quick-actions-grid">
                <button class="action-button blue" @onclick='() => Navigation.NavigateTo("/receptionist/appointments")'>New Appointment</button>
                <button class="action-button teal" @onclick='() => Navigation.NavigateTo("/receptionist/patients")'>Register Patient</button>
                <button class="action-button purple" @onclick='() => Navigation.NavigateTo("/receptionist/queue")'>Check-in Patient</button>
            </div>
        </section>

        <!-- Appointments + Queue -->
        <div class="content-grid">
            <section class="appointments-section">
                <div class="section-header">
                    <h3 class="section-title">Today's Appointments</h3>
                    <span class="section-date">@DateTime.Now.ToString("MMMM dd, yyyy")</span>
                </div>

                <div class="appointments-list">
                    <div class="appointment-card">
                        <div class="appointment-time-badge">09:00 AM</div>
                        <div class="appointment-details">
                            <div class="appointment-header"><h4 class="patient-name">Maria Rodriguez</h4><span class="status-badge confirmed">Confirmed</span></div>
                            <p class="appointment-service">Regular Checkup &amp; Cleaning</p>
                        </div>
                        <div class="appointment-actions"><button class="action-icon-btn">?</button></div>
                    </div>
                </div>
            </section>

            <section class="panel">
                <div class="panel-header">
                    <div class="panel-title">Patient Queue</div>
                    <a class="view-all-link" href="/receptionist/queue">Manage</a>
                </div>
                <div class="queue-list">
                    <div class="queue-item"><div class="queue-number">1</div><div class="queue-details">John Doe • <span class="status-badge waiting">Waiting</span></div></div>
                </div>
            </section>
        </div>
    </main>
</div>