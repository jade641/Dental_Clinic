@page "/dentist-dashboard"
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager Navigation

<div class="dashboard-page">
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="navbar-container">
            <!-- Brand -->
            <a href="#" class="navbar-brand">
                <div class="navbar-logo">
                    <img src="css/bootstrap/Dental_Logo.png" alt="Aurelia Dental Clinic Logo" class="clinic-logo-img" />
                </div>
                <div class="navbar-brand-text">
                    <h1>AURELIA DENTAL CLINIC DR. JADE</h1>
                    <p>YOUR SMILE. OUR MASTER PIECE</p>
                </div>
            </a>

            <!-- Nav Links -->
            <div class="navbar-menu">
                <ul class="nav-links">
                    <li>
                        <a href="#" class="nav-link active">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                            </svg>
                            Overview
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                                <line x1="16" y1="2" x2="16" y2="6"/>
                                <line x1="8" y1="2" x2="8" y2="6"/>
                                <line x1="3" y1="10" x2="21" y2="10"/>
                            </svg>
                            Schedule
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                <circle cx="9" cy="7" r="4"/>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                            </svg>
                            Patients
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Actions -->
            <div class="navbar-actions">
                <div class="search-box">
                    <svg class="search-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"/>
                        <path d="m21 21-4.35-4.35"/>
                    </svg>
                    <input type="text" placeholder="Search patients, appointments..." />
                </div>

                <button class="icon-btn notification-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                    </svg>
                </button>

                <button class="icon-btn settings-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="3"/>
                        <path d="M12 1v6m0 6v6m5.2-13.2l-4.2 4.2m-2 2l-4.2 4.2m13.2-5.2l-4.2-4.2m-2-2l-4.2-4.2"/>
                    </svg>
                </button>

                <div class="user-profile">
                    <div class="user-avatar">DS</div>
                    <div class="user-info">
                        <div class="user-name">Dr. Staff</div>
                        <div class="user-role">Staff Portal</div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="dashboard-content">
        <!-- Hero Card -->
        <div class="hero-card">
            <div class="hero-text">
                <h1>Good morning, Dr. Dr.!</h1>
                <p class="subtitle">Ready to make smiles brighter today?</p>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-label">Today's Appointments</div>
                    <div class="stat-value">4</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Completed</div>
                    <div class="stat-value">1</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Total Patients</div>
                    <div class="stat-value">156</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Pending Treatments</div>
                    <div class="stat-value">12</div>
                </div>
            </div>

            <div class="hero-icon">
                <svg width="80" height="80" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M50 20C36.7 20 26 30.7 26 44C26 57.3 36.7 68 50 68C63.3 68 74 57.3 74 44C74 30.7 63.3 20 50 20ZM50 35C51.7 35 53 36.3 53 38C53 39.7 51.7 41 50 41C48.3 41 47 39.7 47 38C47 36.3 48.3 35 50 35ZM50 62C44.5 62 39.8 58.9 37.8 54.5C37.6 54.1 37.7 53.6 38.1 53.4C43.7 50.4 56.3 50.4 61.9 53.4C62.3 53.6 62.4 54.1 62.2 54.5C60.2 58.9 55.5 62 50 62Z" fill="white" opacity="0.2"/>
                </svg>
            </div>
        </div>

        <!-- Today's Schedule Section -->
        <div class="schedule-section">
            <div class="section-header">
                <div class="section-title">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                        <line x1="16" y1="2" x2="16" y2="6"/>
                        <line x1="8" y1="2" x2="8" y2="6"/>
                        <line x1="3" y1="10" x2="21" y2="10"/>
                    </svg>
                    <h2>Today's Schedule</h2>
                </div>
                <div class="appointment-badge">4 appointments</div>
            </div>

            <div class="schedule-list">
                <!-- Appointment Item 1 -->
                <div class="appointment-item">
                    <div class="appt-time">
                        <svg class="time-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                        <div class="time-info">
                            <div class="time">9:00 AM</div>
                        </div>
                    </div>
                    <div class="appt-details">
                        <div class="patient-name">Maria Rodriguez</div>
                        <div class="treatment-info">Teeth Cleaning • 60 min</div>
                    </div>
                    <div class="appt-actions">
                        <span class="status-badge status-confirmed">confirmed</span>
                        <button class="menu-btn">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <circle cx="12" cy="5" r="2"/>
                                <circle cx="12" cy="12" r="2"/>
                                <circle cx="12" cy="19" r="2"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Appointment Item 2 -->
                <div class="appointment-item">
                    <div class="appt-time">
                        <svg class="time-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                        <div class="time-info">
                            <div class="time">10:30 AM</div>
                        </div>
                    </div>
                    <div class="appt-details">
                        <div class="patient-name">Juan Santos</div>
                        <div class="treatment-info">Root Canal Follow-up • 45 min</div>
                    </div>
                    <div class="appt-actions">
                        <span class="status-badge status-progress">in-progress</span>
                        <button class="menu-btn">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <circle cx="12" cy="5" r="2"/>
                                <circle cx="12" cy="12" r="2"/>
                                <circle cx="12" cy="19" r="2"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Appointment Item 3 -->
                <div class="appointment-item">
                    <div class="appt-time">
                        <svg class="time-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                        <div class="time-info">
                            <div class="time">2:00 PM</div>
                        </div>
                    </div>
                    <div class="appt-details">
                        <div class="patient-name">Ana Dela Cruz</div>
                        <div class="treatment-info">Dental Consultation • 30 min</div>
                    </div>
                    <div class="appt-actions">
                        <span class="status-badge status-confirmed">confirmed</span>
                        <button class="menu-btn">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <circle cx="12" cy="5" r="2"/>
                                <circle cx="12" cy="12" r="2"/>
                                <circle cx="12" cy="19" r="2"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Appointment Item 4 -->
                <div class="appointment-item">
                    <div class="appt-time">
                        <svg class="time-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                        <div class="time-info">
                            <div class="time">3:30 PM</div>
                        </div>
                    </div>
                    <div class="appt-details">
                        <div class="patient-name">Carlos Martinez</div>
                        <div class="treatment-info">Dental Check-up • 30 min</div>
                    </div>
                    <div class="appt-actions">
                        <span class="status-badge status-confirmed">confirmed</span>
                        <button class="menu-btn">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <circle cx="12" cy="5" r="2"/>
                                <circle cx="12" cy="12" r="2"/>
                                <circle cx="12" cy="19" r="2"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/");
    }
}