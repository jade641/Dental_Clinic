@page "/auth"
@page "/login"
@page "/signup"
@page "/"
@using Dental_Clinic.Services
@using Dental_Clinic.Models
@inject NavigationManager Navigation
@inject AuthService AuthService
@inject DatabaseService DatabaseService

<link href="css/login.css" rel="stylesheet" />

<div class="auth-container">
    <!-- Left Section -->
    <div class="left-section">
        <div class="clinic-branding">
            <div class="logo-container">
                <img src="css/bootstrap/Dental_Logo.png" alt="Aurelia Dental Clinic" class="clinic-logo" />
            </div>
            <h1 class="clinic-title">AURELIA DENTAL CLINIC - DR JADE</h1>
            <p class="clinic-tagline">YOUR SMILE. OUR MASTERPIECE</p>
        </div>

        <div class="hero-section">
            <h2 class="hero-title">Smile with <span class="highlight-text">Confidence</span></h2>
            <p class="hero-subtitle">Your trusted partner in dental health</p>
            <p class="hero-description">
                Experience exceptional dental care with our modern facilities, expert team, 
                and personalized treatment plans designed just for you.
            </p>
        </div>

        <div class="stats-section">
            <div class="stat-item">
                <div class="stat-value">500+</div>
                <div class="stat-label">Happy Patients</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">15+</div>
                <div class="stat-label">Years Experience</div>
            </div>
        </div>
    </div>

    <!-- Right Section -->
    <div class="right-section">
        <!-- Theme Toggle -->
        <button class="theme-toggle-btn" @onclick="ToggleTheme" title="Toggle theme">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5" />
                <line x1="12" y1="1" x2="12" y2="3" />
                <line x1="12" y1="21" x2="12" y2="23" />
                <line x1="4.22" y1="4.22" x2="5.64" y2="5.64" />
                <line x1="18.36" y1="18.36" x2="19.78" y2="19.78" />
                <line x1="1" y1="12" x2="3" y2="12" />
                <line x1="21" y1="12" x2="23" y2="12" />
                <line x1="4.22" y1="19.78" x2="5.64" y2="18.36" />
                <line x1="18.36" y1="5.64" x2="19.78" y2="4.22" />
            </svg>
        </button>

        <div class="auth-card">
            <!-- Tab Indicator -->
            <div class="tab-indicator">
                <div class="tab-line @(isLoginMode ? "active" : "")" @onclick="SwitchToLogin"></div>
                <div class="tab-line @(!isLoginMode ? "active" : "")" @onclick="SwitchToSignUp"></div>
            </div>

            <!-- Error/Success Messages -->
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="message-alert error">@errorMessage</div>
            }
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="message-alert success">@successMessage</div>
            }

            @if (isLoginMode)
            {
                <!-- Login Form -->
                <div class="form-header">
                    <h3>Welcome Back</h3>
                    <p>Sign in to your patient portal</p>
                </div>

                <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                    <DataAnnotationsValidator />

                    <div class="input-field">
                        <label>Email Address</label>
                        <div class="input-with-icon">
                            <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                <polyline points="22,6 12,13 2,6" />
                            </svg>
                            <InputText @bind-Value="loginModel.EmailOrUsername" placeholder="your.email@example.com" />
                        </div>
                    </div>

                    <div class="input-field">
                        <label>Password</label>
                        <div class="input-with-icon">
                            <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                                <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                            </svg>
                            <InputText type="@loginPasswordType" @bind-Value="loginModel.Password" placeholder="Enter your password" />
                            <button type="button" class="password-toggle" @onclick="ToggleLoginPassword">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    @if (showLoginPassword)
                                    {
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                        <circle cx="12" cy="12" r="3" />
                                    }
                                    else
                                    {
                                        <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24" />
                                        <line x1="1" y1="1" x2="23" y2="23" />
                                    }
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div class="form-footer">
                        <label class="checkbox">
                            <InputCheckbox @bind-Value="loginModel.RememberMe" />
                            <span>Remember me</span>
                        </label>
                        <a href="/forgot-password" class="forgot-link">Forgot Password?</a>
                    </div>

                    <button type="submit" class="primary-btn" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="loading-spinner"></span>
                            <span>Signing in...</span>
                        }
                        else
                        {
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                            </svg>
                            <span>Access My Portal</span>
                        }
                    </button>
                </EditForm>
            }
            else
            {
                <!-- Sign Up Form -->
                <div class="form-header">
                    <h3>Join Our Family</h3>
                    <p>Create your patient account today</p>
                </div>

                <EditForm Model="@signUpModel" OnValidSubmit="HandleSignUp">
                    <DataAnnotationsValidator />

                    <div class="input-row">
                        <div class="input-field">
                            <label>First Name</label>
                            <div class="input-with-icon">
                                <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                    <circle cx="12" cy="7" r="4" />
                                </svg>
                                <InputText @bind-Value="signUpModel.FirstName" placeholder="John" />
                            </div>
                        </div>
                        <div class="input-field">
                            <label>Last Name</label>
                            <div class="input-with-icon">
                                <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                    <circle cx="12" cy="7" r="4" />
                                </svg>
                                <InputText @bind-Value="signUpModel.LastName" placeholder="Doe" />
                            </div>
                        </div>
                    </div>

                    <div class="input-field">
                        <label>Email Address</label>
                        <div class="input-with-icon">
                            <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                <polyline points="22,6 12,13 2,6" />
                            </svg>
                            <InputText @bind-Value="signUpModel.Email" placeholder="your.email@example.com" />
                        </div>
                    </div>

                    <div class="input-field">
                        <label>Phone Number</label>
                        <div class="input-with-icon">
                            <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                            </svg>
                            <InputText @bind-Value="signUpModel.PhoneNumber" placeholder="+63 9XX XXX XXXX" />
                        </div>
                    </div>

                    <div class="input-field">
                        <label>Password</label>
                        <div class="input-with-icon">
                            <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                                <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                            </svg>
                            <InputText type="@signupPasswordType" @bind-Value="signUpModel.Password" placeholder="Enter your password" />
                            <button type="button" class="password-toggle" @onclick="ToggleSignupPassword">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    @if (showSignupPassword)
                                    {
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                        <circle cx="12" cy="12" r="3" />
                                    }
                                    else
                                    {
                                        <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24" />
                                        <line x1="1" y1="1" x2="23" y2="23" />
                                    }
                                </svg>
                            </button>
                        </div>
                    </div>

                    <label class="checkbox" style="margin-bottom: 20px;">
                        <input type="checkbox" />
                        <span>Remember me</span>
                    </label>

                    <button type="submit" class="primary-btn" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="loading-spinner"></span>
                            <span>Creating account...</span>
                        }
                        else
                        {
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                            </svg>
                            <span>Join Our Family</span>
                        }
                    </button>
                </EditForm>
            }

            <!-- Divider -->
            <div class="or-divider">
                <span>Or continue with</span>
            </div>

            <!-- Google Button -->
            <button class="google-btn" @onclick="HandleGoogleAuth" disabled="@isLoading">
                <svg width="18" height="18" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                </svg>
                <span>Continue with Google</span>
            </button>

            <!-- Switch Auth Text -->
            <p class="switch-text">
                @if (isLoginMode)
                {
                    <text>Don't have an account? <button type="button" class="link-btn" @onclick="SwitchToSignUp">Sign Up</button></text>
                }
                else
                {
                    <text>Already have an account? <button type="button" class="link-btn" @onclick="SwitchToLogin">Sign In</button></text>
                }
            </p>

            <!-- Staff Login -->
            <button class="staff-btn" @onclick="OpenStaffModal">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="8" r="4" />
                    <path d="M12 14c-4 0-8 2-8 6v2h16v-2c0-4-4-6-8-6z" />
                </svg>
                <span>Staff / Admin Login</span>
            </button>
        </div>
    </div>
</div>

<!-- Staff Modal -->
@if (showStaffModal)
{
    <div class="modal-backdrop" @onclick="CloseStaffModal">
        <div class="modal-dialog" @onclick:stopPropagation="true">
            <button class="modal-close" @onclick="CloseStaffModal">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18" />
                    <line x1="6" y1="6" x2="18" y2="18" />
                </svg>
            </button>

            <div class="modal-header">
                <div class="modal-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                    </svg>
                </div>
                <h3>Staff & Admin Portal</h3>
            </div>
            <p class="modal-subtitle">Access restricted to authorized staff and administrators only</p>

            @if (!string.IsNullOrEmpty(staffErrorMessage))
            {
                <div class="message-alert error">@staffErrorMessage</div>
            }

            <EditForm Model="@staffModel" OnValidSubmit="HandleStaffLogin">
                <div class="input-field">
                    <label>Access Level</label>
                    <div class="custom-dropdown" @onclick="ToggleAccessDropdown">
                        <div class="dropdown-selected">
                            <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                <circle cx="9" cy="7" r="4" />
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" />
                            </svg>
                            <span>
                                @if (staffModel.AccessLevel == "staff") { <text>👨‍⚕️ Staff / Dentist</text> }
                                else if (staffModel.AccessLevel == "receptionist") { <text>🧑‍💼 Receptionist</text> }
                                else if (staffModel.AccessLevel == "admin") { <text>👨‍💻 Administrator</text> }
                            </span>
                            <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 12 12" fill="none">
                                <path d="M2 4l4 4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        @if (showAccessDropdown)
                        {
                            <div class="dropdown-menu">
                                <div class="dropdown-item @(staffModel.AccessLevel == "staff" ? "selected" : "")" @onclick="@(() => SelectAccessLevel("staff"))">
                                    <span>👨‍⚕️ Staff / Dentist</span>
                                    @if (staffModel.AccessLevel == "staff")
                                    {
                                        <svg class="checkmark" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                    }
                                </div>
                                <div class="dropdown-item @(staffModel.AccessLevel == "admin" ? "selected" : "")" @onclick="@(() => SelectAccessLevel("admin"))">
                                    <span>👨‍💻 Administrator</span>
                                    @if (staffModel.AccessLevel == "admin")
                                    {
                                        <svg class="checkmark" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                    }
                                </div>
                                <div class="dropdown-item @(staffModel.AccessLevel == "receptionist" ? "selected" : "")" @onclick="@(() => SelectAccessLevel("receptionist"))">
                                    <span>🧑‍💼 Receptionist</span>
                                    @if (staffModel.AccessLevel == "receptionist")
                                    {
                                        <svg class="checkmark" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="input-field">
                    <label>Staff ID or Email</label>
                    <div class="input-with-icon">
                        <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                            <circle cx="12" cy="7" r="4" />
                        </svg>
                        <InputText @bind-Value="staffModel.EmailOrUsername" placeholder="Enter your staff credentials" />
                    </div>
                </div>

                <div class="input-field">
                    <label>Password</label>
                    <div class="input-with-icon">
                        <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                            <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                        </svg>
                        <InputText type="@staffPasswordType" @bind-Value="staffModel.Password" placeholder="Enter your password" />
                        <button type="button" class="password-toggle" @onclick="ToggleStaffPassword">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                @if (showStaffPassword)
                                {
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                    <circle cx="12" cy="12" r="3" />
                                }
                                else
                                {
                                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24" />
                                    <line x1="1" y1="1" x2="23" y2="23" />
                                }
                            </svg>
                        </button>
                    </div>
                </div>

                <button type="submit" class="primary-btn" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="loading-spinner"></span>
                        <span>Verifying...</span>
                    }
                    else
                    {
                        <span>Access Dashboard</span>
                    }
                </button>
            </EditForm>
        </div>
    </div>

    @code {
        private bool showAccessDropdown = false;

        private void ToggleAccessDropdown()
        {
            showAccessDropdown = !showAccessDropdown;
        }

        private void SelectAccessLevel(string level)
        {
            staffModel.AccessLevel = level;
            showAccessDropdown = false;
            StateHasChanged();
        }
    }
}