@page "/dentist/patients"
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager Navigation
@implements IDisposable

<link href="css/dentistdashboard.css" rel="stylesheet" />
<link href="css/dentistpatient.css" rel="stylesheet" />

<div class="dashboard-page">
    <DentistNavBar />

    <!-- Main Content - Patients Page -->
    <div class="dashboard-content">
        <div class="page-header">
            <h2>Patient Management</h2>
            <div class="header-actions">
                <button class="filter-btn">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3" />
                    </svg>
                    Filter
                </button>
                <button class="add-patient-btn" @onclick="AddNewPatient">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19" />
                        <line x1="5" y1="12" x2="19" y2="12" />
                    </svg>
                    Add Patient
                </button>
            </div>
        </div>

        <div class="patients-container">
            <h3 class="section-title">Active Patients</h3>
            <div class="patients-list">
                @foreach (var patient in patients)
                {
                    <div class="patient-card">
                        <div class="patient-left">
                            <div class="patient-avatar">@patient.Initials</div>
                            <div class="patient-info">
                                <h4 class="patient-name">@patient.Name</h4>
                                <div class="patient-contact-info">
                                    <div class="contact-row">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="2" y="4" width="20" height="16" rx="2" />
                                            <path d="M22 7l-10 7L2 7" />
                                        </svg>
                                        <span>@patient.Email</span>
                                    </div>
                                    <div class="contact-row">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" />
                                        </svg>
                                        <span>@patient.Phone</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="patient-right">
                            <span class="status-badge status-@patient.Status">@patient.Status</span>
                            <div class="patient-meta">
                                <span class="meta-label">Last: @patient.LastVisit</span>
                                <span class="meta-label">Visits: @patient.Visits</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private string searchQuery = string.Empty;
    private string currentUrl = string.Empty;

    private sealed class Patient
    {
        public string? Initials { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Phone { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
        public string LastVisit { get; set; } = string.Empty;
        public int Visits { get; set; }
    }

    private readonly Patient[] patients = new[]
    {
        new Patient
        {
            Initials = "MR",
            Name = "Maria Rodriguez",
            Email = "maria.rodriguez@email.com",
            Phone = "+63 912 345 6789",
            Status = "active",
            LastVisit = "20/08/2025",
            Visits = 5
        },
        new Patient
        {
            Initials = "JS",
            Name = "Juan Santos",
            Email = "juan.santos@email.com",
            Phone = "+63 998 765 4321",
            Status = "treatment",
            LastVisit = "10/09/2025",
            Visits = 8
        },
        new Patient
        {
            Initials = "ADC",
            Name = "Ana Dela Cruz",
            Email = "ana.delacruz@email.com",
            Phone = "+63 917 888 9999",
            Status = "active",
            LastVisit = "15/07/2025",
            Visits = 3
        }
    };

    protected override void OnInitialized()
    {
        currentUrl = Navigation.Uri;
        Navigation.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = e.Location;
        StateHasChanged();
    }

    private void NavigateTo(string path)
    {
        Navigation.NavigateTo(path, forceLoad: false);
    }

    private void AddNewPatient()
    {
        Console.WriteLine("Opening add patient modal");
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }
}