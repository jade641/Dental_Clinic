@page "/dentist/patients"
@using Microsoft.AspNetCore.Components.Routing
@using Dental_Clinic.Services
@using Dental_Clinic.Models
@inject NavigationManager Navigation
@inject DatabaseService DatabaseService
@implements IDisposable

<link href="css/dentistdashboard.css" rel="stylesheet" />
<link href="css/dentistpatient.css" rel="stylesheet" />

<div class="dashboard-page">
    <DentistNavBar />

    <!-- Main Content - Patients Page -->
    <div class="dashboard-content">
        <div class="page-header">
            <h2>Patient Management</h2>
            <div class="header-actions">
                <button class="filter-btn">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3" />
                    </svg>
                    Filter
                </button>
            </div>
        </div>

        <div class="patients-container">
            <h3 class="section-title">Active Patients</h3>
            <div class="patients-list">
                @foreach (var patient in filteredPatients)
                {
                    <div class="patient-card" @onclick="() => ShowPatientDetails(patient)">
                        <div class="patient-left">
                            <div class="patient-avatar">
                                @if (!string.IsNullOrEmpty(patient.Avatar))
                                {
                                    <img src="@patient.Avatar" alt="@patient.FullName" style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;" />
                                }
                                else
                                {
                                    @patient.Initials
                                }
                            </div>
                            <div class="patient-info">
                                <h4 class="patient-name">@patient.FullName</h4>
                                <div class="patient-contact-info">
                                    <div class="contact-row">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="2" y="4" width="20" height="16" rx="2" />
                                            <path d="M22 7l-10 7L2 7" />
                                        </svg>
                                        <span>@patient.Email</span>
                                    </div>
                                    <div class="contact-row">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z" />
                                        </svg>
                                        <span>@patient.PhoneNumber</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="patient-right">
                            <span class="status-badge status-active">Active</span>
                            <div class="patient-meta">
                                <span class="meta-label">Last: @(patient.LastVisit?.ToString("dd/MM/yyyy") ?? "N/A")</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (showModal && selectedPatient != null)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content" @onclick:stopPropagation>
            <div class="modal-header">
                <h3>Patient Details</h3>
                <button class="close-btn" @onclick="CloseModal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="patient-profile-header">
                    <div class="patient-avatar-large">
                        @if (!string.IsNullOrEmpty(selectedPatient.Avatar))
                        {
                            <img src="@selectedPatient.Avatar" alt="@selectedPatient.FullName" />
                        }
                        else
                        {
                            @selectedPatient.Initials
                        }
                    </div>
                    <div class="patient-header-info">
                        <h4>@selectedPatient.FullName</h4>
                        <span class="status-badge status-active">Active</span>
                    </div>
                </div>

                <div class="info-grid">
                    <div class="info-item">
                        <label>Email</label>
                        <p>@selectedPatient.Email</p>
                    </div>
                    <div class="info-item">
                        <label>Phone</label>
                        <p>@selectedPatient.PhoneNumber</p>
                    </div>
                    <div class="info-item">
                        <label>Address</label>
                        <p>@selectedPatient.Address</p>
                    </div>
                    <div class="info-item">
                        <label>Birth Date</label>
                        <p>@selectedPatient.BirthDate.ToString("MMM dd, yyyy")</p>
                    </div>
                    <div class="info-item">
                        <label>Sex</label>
                        <p>@selectedPatient.Sex</p>
                    </div>
                    <div class="info-item">
                        <label>Marital Status</label>
                        <p>@selectedPatient.MaritalStatus</p>
                    </div>
                </div>

                <div class="medical-section">
                    <h5>Medical History</h5>
                    <p>@(string.IsNullOrEmpty(selectedPatient.MedicalHistory) ? "None" : selectedPatient.MedicalHistory)</p>
                </div>

                <div class="medical-section">
                    <h5>Medical Alerts</h5>
                    <p class="alert-text">@(string.IsNullOrEmpty(selectedPatient.MedicalAlerts) ? "None" : selectedPatient.MedicalAlerts)</p>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" @onclick="CloseModal">Close</button>
            </div>
        </div>
    </div>
}

@code {
    private string searchQuery = string.Empty;
    private string currentUrl = string.Empty;
    private List<DatabaseService.PatientDetailedModel> patients = new List<DatabaseService.PatientDetailedModel>();
    private List<DatabaseService.PatientDetailedModel> filteredPatients = new List<DatabaseService.PatientDetailedModel>();
    private bool showModal = false;
    private DatabaseService.PatientDetailedModel? selectedPatient;

    protected override async Task OnInitializedAsync()
    {
        currentUrl = Navigation.Uri;
        Navigation.LocationChanged += OnLocationChanged;
        await LoadPatients();
        FilterPatients();
    }

    private async Task LoadPatients()
    {
        patients = await DatabaseService.GetAllPatientsDetailedAsync();
        FilterPatients();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = e.Location;
        FilterPatients();
        StateHasChanged();
    }

    private void FilterPatients()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        if (!string.IsNullOrEmpty(uri.Query))
        {
            var query = uri.Query.TrimStart('?');
            foreach (var part in query.Split('&'))
            {
                var kv = part.Split('=');
                if (kv.Length == 2 && kv[0] == "search")
                {
                    searchQuery = Uri.UnescapeDataString(kv[1]);
                    break;
                }
            }
        }

        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredPatients = patients.Where(p => 
                (p.FullName?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (p.Email?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false)
            ).ToList();
        }
        else
        {
            filteredPatients = patients;
        }
    }

    private void ShowPatientDetails(DatabaseService.PatientDetailedModel patient)
    {
        selectedPatient = patient;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        selectedPatient = null;
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }
}