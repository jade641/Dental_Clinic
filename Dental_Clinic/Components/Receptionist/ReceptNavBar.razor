                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" @bind="editFullName" placeholder="Enter full name" />
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" @bind="editEmail" placeholder="Enter email" />
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="tel" @bind="editPhone" placeholder="Enter phone number" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" @onclick="CloseEditProfile">Cancel</button>
                <button class="btn-primary" @onclick="SaveProfileChanges">Save Changes</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject] private Dental_Clinic.Services.SessionService SessionService { get; set; } = default!;

    private bool showSettings = false;
    private bool showEditProfileModal = false;
    private string receptionistName = "Receptionist";

    private string editFullName = "";
    private string editEmail = "";
    private string editPhone = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var session = await SessionService.GetCurrentSessionAsync();
            receptionistName = session?.UserName ?? "Receptionist";
        }
        catch { receptionistName = "Receptionist"; }
    }

    private void ToggleSettings() { showSettings = !showSettings; }
    private void EditProfile()
    {
        showEditProfileModal = true;
        showSettings = false;
        editFullName = receptionistName;
        editEmail = "";
        editPhone = "";
    }
    private void CloseEditProfile() { showEditProfileModal = false; }
    private async Task SaveProfileChanges()
    {
        if (!string.IsNullOrWhiteSpace(editFullName)) receptionistName = editFullName;
        showEditProfileModal = false;
        await InvokeAsync(StateHasChanged);
    }
    private void Logout() { showSettings = false; Navigation.NavigateTo("/login", true); }
}
