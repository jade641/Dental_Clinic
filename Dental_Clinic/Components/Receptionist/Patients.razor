@page "/patients"
@page "/receptionist/patients"
@using Microsoft.AspNetCore.Components
<link href="css/dentistdashboard.css" rel="stylesheet" />
<link href="css/receptionistdashboard.css" rel="stylesheet" />
<link href="ReceptPatients.css" rel="stylesheet" />

<div class="dashboard-page">
    <nav class="navbar">
        <div class="navbar-container">
            <NavLink href="/receptionist/dashboard" class="navbar-brand" Match="NavLinkMatch.All">
                <div class="navbar-logo">
                    <img src="css/bootstrap/Dental_Logo.png" alt="Aurelia Dental Clinic Logo" class="clinic-logo-img" />
                </div>
                <div class="navbar-brand-text">
                    <h1>AURELIA DENTAL CLINIC - DR JADE</h1>
                    <p>YOUR SMILE. OUR MASTERPIECE</p>
                </div>
            </NavLink>
            <div class="navbar-menu">
                <ul class="nav-links">
                    <li>
                        <NavLink href="/receptionist/dashboard" class="nav-link" Match="NavLinkMatch.All">Overview</NavLink>
                    </li>
                    <li>
                        <NavLink href="/receptionist/calendar" class="nav-link" ActiveClass="active">Calendar</NavLink>
                    </li>
                    <li>
                        <NavLink href="/receptionist/patients" class="nav-link active" ActiveClass="active">Patients</NavLink>
                    </li>
                    <li>
                        <NavLink href="/receptionist/messages" class="nav-link" ActiveClass="active">Messages</NavLink>
                    </li>
                </ul>
            </div>
            <div class="navbar-actions">
                <div class="search-box"></div>
                <button class="icon-button" type="button"></button>
                <button class="icon-button" type="button"></button>
            </div>
        </div>
    </nav>

    <main class="dashboard-main">
        <div class="patients-container">
            <header class="patients-header">
                <div class="header-left">
                    <span class="icon-users">👥</span>
                    <h1>Patient Directory</h1>
                </div>
                <button class="btn-add-patient">
                    <span class="icon-plus">👤+</span>
                    Add New Patient
                </button>
            </header>

            <div class="search-section">
                <div class="search-box">
                    <span class="search-icon">🔍</span>
                    <input type="text" placeholder="Search patients by name, phone, or email..." />
                </div>
            </div>

            <div class="patients-list">
                <div class="patient-card">
                    <div class="patient-info">
                        <div class="patient-avatar">MR</div>
                        <div class="patient-details">
                            <h3 class="patient-name">Maria Rodriguez</h3>
                            <div class="contact-info">
                                <span class="contact-item">
                                    <span class="icon">📞</span>
                                    +63 912 345 6789
                                </span>
                                <span class="contact-item">
                                    <span class="icon">✉️</span>
                                    maria.r@email.com
                                </span>
                            </div>
                            <div class="visit-info">
                                <span>Last Visit: 15/09/2025</span>
                                <span class="next-visit">Next: 15/10/2025</span>
                            </div>
                        </div>
                    </div>
                    <div class="patient-actions">
                        <button class="action-btn" title="Call">📞</button>
                        <button class="action-btn" title="Email">✉️</button>
                        <button class="action-btn" title="Edit">✏️</button>
                    </div>
                </div>

                <div class="patient-card">
                    <div class="patient-info">
                        <div class="patient-avatar">JS</div>
                        <div class="patient-details">
                            <h3 class="patient-name">Juan Santos</h3>
                            <div class="contact-info">
                                <span class="contact-item">
                                    <span class="icon">📞</span>
                                    +63 998 765 4321
                                </span>
                                <span class="contact-item">
                                    <span class="icon">✉️</span>
                                    juan.s@email.com
                                </span>
                            </div>
                            <div class="visit-info">
                                <span>Last Visit: 01/09/2025</span>
                                <span class="next-visit">Next: 15/09/2025</span>
                            </div>
                        </div>
                    </div>
                    <div class="patient-actions">
                        <button class="action-btn" title="Call">📞</button>
                        <button class="action-btn" title="Email">✉️</button>
                        <button class="action-btn" title="Edit">✏️</button>
                    </div>
                </div>

                <div class="patient-card">
                    <div class="patient-info">
                        <div class="patient-avatar">ADC</div>
                        <div class="patient-details">
                            <h3 class="patient-name">Ana Dela Cruz</h3>
                            <div class="contact-info">
                                <span class="contact-item">
                                    <span class="icon">📞</span>
                                    +63 917 888 9999
                                </span>
                                <span class="contact-item">
                                    <span class="icon">✉️</span>
                                    ana.dc@email.com
